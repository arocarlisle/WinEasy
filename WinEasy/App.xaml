<Application x:Class="ScreenCut.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ScreenCut"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MainBackStyle" TargetType="Border">
            <Setter Property="Background" Value="#32000000"></Setter>
            <Setter Property="Clip">
                <Setter.Value>
                    <EllipseGeometry RadiusX="35" RadiusY="35" ></EllipseGeometry>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
